
<% if notice %>
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong><%= notice %></strong> .
  </div>
<% end %>
<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Posts</h3>
      </div>

      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Text</th>
              <th>Date</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.name %></td>
                <td><%= post.text %></td>
                <td><%= post.date %></td>
                <td><%= link_to 'Show', post, class: "btn btn-outline-info" %></td>
                <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-warning" %></td>
                <td><%= link_to 'Destroy', post, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="panel-footer">
        <%= link_to 'New Post', new_post_path, class: "btn btn-outline-success" %>
      </div>
    </div>